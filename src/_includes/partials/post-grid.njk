{% for post in paged.posts %}
<div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
    <div class="rounded shadow-md h-full">

        <a href="{{ post.url | url }}">
            <img class="w-full m-0 rounded-t lazy" src="https://img.youtube.com/vi/ {{ post.data.thumb }} /maxresdefault.jpg" data-src="https://img.youtube.com/vi/{{ post.data.thumb }}/maxresdefault.jpg" alt="This post thumbnail">
        </a>
        <div class="px-6 py-5">
            <div class="font-semibold text-lg mb-2">
                <a class="text-gray-900 hover:text-gray-700" href="{{ post.url | url }}">{{ post.data.title }}</a>
            </div>
     
<!--
            <p class="text-gray-800">
                {% if post.data.description %}
                {{ post.data.description }}
                {% else %}
                {{ post.templateContent | striptags | truncate(90, true) }}
                {% endif %}
            
            </p>
                  -->
        </div>
    </div>
</div>
{% endfor %}